<%- include('../partials/header') %>

<table id="list">
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight Number</th>
        <th>Departure Date</th>
        <th>Arrivals</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
        <% flights.forEach(function(m) { %>
            <tr>
              <td><%= m.airline %></td>
              <td><%= m.airport %></td>
              <td><%= m.flightNo %></td>
              <td><%= m.departs %></td>
              <td><%= m.destinations.reduce((acc, curr) => { acc += curr.airport; return acc + ', '; }, '') %></td>
              <td><a href="/flights/<%= m._id %>">DETAILS</a></td>
            </tr>
            <% }); %>
      </tbody>
    </table>


<%- include('../partials/footer') %>
